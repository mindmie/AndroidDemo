<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mindmie.androiddemo.QuestionActivity"
    android:orientation="vertical"
    android:background="@drawable/questionnair_bg">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="5 of 10 "/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Which are favors that you prefer?"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="you can choose more than one"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <Button
                android:id="@+id/btn_sour"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_next_selector"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:text="Sour" />
            <Button
                android:id="@+id/btn_sweet"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_next_selector"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:text="Sweet"/>
            <Button
                android:id="@+id/btn_salty"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_next_selector"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:text="Salty" />
            <Button
                android:id="@+id/btn_spicy"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_next_selector"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:text="Spicy"/>

        </RadioGroup>
        <Button
            android:id="@+id/btn_next"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_male_selector"

            android:text="Next"/>

    </LinearLayout>


</LinearLayout>

