<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mindmie.androiddemo.Question1Activity"
    android:orientation="vertical"
    android:background="@drawable/questionnair_bg">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="4 of 9 "/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How often you exercise per week?"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_noexercise"
            android:layout_width="match_parent"
            android:background="@drawable/btn_next_selector"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:text="No Exercise"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_13day"
            android:layout_width="match_parent"
            android:background="@drawable/btn_next_selector"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:text="1-3 days per week"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_35day"
            android:layout_width="match_parent"
            android:background="@drawable/btn_next_selector"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:text="3-5 days per week"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_everyday"
            android:layout_width="match_parent"
            android:background="@drawable/btn_next_selector"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:text="everyday"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_2timeday"
            android:layout_width="match_parent"
            android:background="@drawable/btn_next_selector"
            android:layout_height="wrap_content"
            android:text="2 time per day"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>

